<p id="notice"><%= notice %></p>

<h1>空き家情報</h1>

<table>
  <thead>
    <tr>
      <th>地区</th>
      <th>住所</th>
      <th>間取り</th>
      <th>築年数</th>
      <th>価格</th>
      <th>TEL</th>
      <th>改装</th>
      <th>詳細</th>
      <th>写真</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @houses.each do |house| %>
      <tr>
      　<td><%= house.district_id %></td>
        <td><%= house.address %></td>
        <td><%= house.floorplan %></td>
        <td><%= house.age %></td>
        <td><%= house.price %></td>
        <td><%= house.tel %></td>
        <td><%= house.renovation %></td>
        <td><%= house.detail %></td>
        <td nowrap>
        <% house.housepictures.each_with_index do |housepicture,i| %>
        <%= image_tag(url_for(image_of_housepictures_path(housepicture.id)), size:'100x100')%>
        <% if (i+1) % 3 == 0 %>
            <br>
        <%end%>
        <%end%>
        </td>
        <td><%= link_to '詳細', house %></td>
        <td><%= link_to '変更', edit_house_path(house) %></td>
        <td><%= link_to '削除', house, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%  @houses.each do |house| %>
<div class="alert alert-info">
    <h4 id=<%= house.id %>>No.<%= house.id %></h4>
<%= render 'show_template', house: house%>
<div class="row">
  <div class="col-md-2 offset-md-6" style="margin-top: 10px;">
    <%= link_to '詳細', house, class: "form-control btn btn-warning" %>
  </div>
  <div class="col-md-2" style="margin-top: 10px;">
    <%= link_to '変更',edit_house_path(house), class: "form-control btn btn-warning" %>
  </div>
  <div class="col-md-2" style="margin-top: 10px;">
    <%= link_to '削除', house, method: :delete, data: {confirm: 'Are you sure?' },class: "form-control btn btn-warning" %>
  </div>
</div>
<br><br>
<%end%>
<%= link_to '空き家情報の追加', new_house_path, class: "form-control btn btn-dark" %>
<br><br>
<%= link_to 'トップに戻る' , '/', class: "form-control btn btn-light" %>
