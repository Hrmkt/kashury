<p id="notice"><%= notice %></p>

<h1>空き家の写真</h1>

<table>
  <thead>
    <tr>
      <th>空き家名</th>
      <th>写真</th>
      <th>築年数</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @housepictures.each do |housepicture| %>
      <tr>
        <td><%= housepicture.name %></td>
        <td><%= image_tag(url_for(image_of_housepictures_path(housepicture)), size:'100x100')%></td>
        <td><%= housepicture.house_id %></td>
        <td><%= link_to '詳細', housepicture %></td>
        <td><%= link_to '変更', edit_housepicture_path(housepicture) %></td>
        <td><%= link_to '削除', housepicture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '写真の新規登録', new_housepicture_path %>
<p><%= link_to 'トップに戻る' , '/' %></p>